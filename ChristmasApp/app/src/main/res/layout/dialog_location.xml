<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_round_corner_white_dialog">

    <!-- Dialog Title -->
    <TextView
        android:id="@+id/tv_permissions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:maxLines="1"
        android:text="TEST"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="12dp"/>

    <!-- Dialog Description -->
    <TextView
        android:id="@+id/tv_permissions_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_permissions_title"
        android:ellipsize="end"
        android:gravity="center"
        android:text="CONTENT"
        android:layout_marginVertical="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginHorizontal="12dp"/>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_bar"
        android:layout_above="@id/ll_permissions_buttons"/>

    <!-- Dialog Buttons -->
    <LinearLayout
        android:id="@+id/ll_permissions_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_permissions_description"
        android:orientation="horizontal"
        android:layout_marginVertical="12dp">

        <!-- Dialog Cancel Button -->
        <TextView
            android:id="@+id/tv_permissions_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="CANCEL"
            android:textAlignment="center"
            android:textColor="@color/grey_light"
            android:textSize="16sp"/>

        <!-- Dialog OK Button -->
        <TextView
            android:id="@+id/tv_permissions_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="OK"
            android:textAlignment="center"
            android:textColor="@color/background_bar"
            android:textStyle="bold"
            android:textSize="18sp"/>

    </LinearLayout>

</RelativeLayout>